{% extends 'base.html.twig' %}

{% block title %}Categories - Gustora{% endblock %}

{% block body %}
<div class="container-xxl p-0">
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <div class="container-xxl py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="card-title mb-4 text-center">Categories</h2>
                            <div class="mb-3 text-end">
                                <a href="{{ path('app_category_new') }}" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i> New Category
                                </a>
                                  <a href="/admin"  class="btn btn-danger">
                                   Back
                                </a>
                            </div>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for category in categories %}
                                        <tr>
                                            <td>{{ loop.index }}</td>
                                            <td>{{ category.name }}</td>
                                            <td>
                                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3" class="text-center">No categories found.</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
