{% extends 'base.html.twig' %}

{% block title %}Verify Phone Number{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="h3 mb-3 text-center">Verify Your Phone Number</h1>

                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <p class="text-center">We've sent a verification code to your phone number. Please enter it below:</p>

                    <form method="post">
                        <div class="form-group mb-3">
                            <input type="text" 
                                   name="otp" 
                                   id="otp" 
                                   class="form-control" 
                                   required 
                                   placeholder="Enter verification code">
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Verify
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}