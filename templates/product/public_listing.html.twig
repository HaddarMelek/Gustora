{% extends 'base.html.twig' %}

{% block title %}Our Products{% endblock %}

{% block body %}
    <h1>Our Products</h1>

    <div class="products">
        {% for product in products %}
            <div class="product">
                <h2>{{ product.name }}</h2>
                {% if product.image %}
                    <img src="{{ vich_uploader_asset(product, 'imageFile') }}" width="200">
                {% endif %}
                <p>Price: {{ product.price }}</p>
                <a href="{{ path('app_public_product_show', {'id': product.id}) }}">View Details</a>
            </div>
        {% else %}
            <p>No products found</p>
        {% endfor %}
        </div>
{% endblock %}