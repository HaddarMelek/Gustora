{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="container-xxl p-0">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg mt-5 border-0 rounded-4">
                <div class="card-header bg-white text-dark text-center rounded-top border-bottom">
                    <h2 class="mb-0 fw-bold">Edit Product</h2>
                </div>
                <div class="card-body bg-light rounded-bottom">
                    {{ include('product/_form.html.twig', {'button_label': 'Update', 'button_class': 'btn btn-success w-100'}) }}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_product_index') }}" class="btn btn-primary px-4">
                            <i class="fas fa-arrow-left me-2"></i>Back to list
                        </a>
                        <div>
                            {{ include('product/_delete_form.html.twig', {'button_class': 'btn btn-danger px-4'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
