{% extends 'base.html.twig' %}

{% block title %}Order Confirmed{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title text-success mb-4">
                        <i class="fas fa-check-circle"></i>
                        Order Confirmed!
                    </h1>
                    
                    <div class="alert alert-success">
                        <p class="mb-0">Thank you for your order. We've sent an invoice to your email: {{ order.user.email }}</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h3 class="mb-0">Order Summary</h3>
                        </div>
                        <div class="card-body">
                            <p><strong>Order #:</strong> {{ order.id }}</p>
                            <p><strong>Date:</strong> {{ order.createdAt|date('Y-m-d H:i:s') }}</p>
                            <p><strong>Total Amount:</strong> {{ order.totalAmount|number_format(2) }} TND</p>
                            <p><strong>Payment Method:</strong> {{ order.paymentMethod }}</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <a href="{{ path('app_invoice_download', {'id': order.id}) }}" 
                           class="btn btn-primary btn-lg">
                            <i class="fas fa-download"></i> Download Invoice
                        </a>
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_user_orders') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-list"></i> View My Orders
                        </a>
                        <a href="{{ path('app_products_public') }}" class="btn btn-success">
                            <i class="fas fa-shopping-bag"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}