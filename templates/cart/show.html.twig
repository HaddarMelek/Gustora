{% extends 'base.html.twig' %}

{% block title %}Your Cart{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Your Shopping Cart</h1>

    {% if cart and cart.items|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in cart.items %}
                        <tr>
                            <td>{{ item.product.name }}</td>
                            <td>{{ item.product.price }} TND</td>
                            <td>
                                <form action="{{ path('app_cart_update', {'id': item.id}) }}" 
                                      method="POST" 
                                      class="d-flex align-items-center gap-2">
                                    <input type="number" 
                                           name="quantity" 
                                           value="{{ item.quantity }}" 
                                           min="1" 
                                           class="form-control" 
                                           style="width: 80px"
                                           onchange="this.form.submit()">
                                </form>
                            </td>
                            <td>{{ (item.product.price * item.quantity)|number_format(2) }} TND</td>
                            <td>
                                <form action="{{ path('app_cart_remove', {'id': item.id}) }}" 
                                      method="POST" 
                                      onsubmit="return confirm('Are you sure you want to remove this item?')"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-lg px-4">
                                        <i class="fas fa-trash me-2"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr class="table-active">
                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                        <td><strong>{{ cart.total|number_format(2) }} TND</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <form action="{{ path('app_cart_clear') }}" method="POST" 
                  onsubmit="return confirm('Empty your cart?')">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt"></i> Empty Cart
                </button>
            </form>

            <a href="{{ path('app_validate_cart') }}" class="btn btn-success">
                <i class="fas fa-check"></i> Validate Cart
            </a>
        </div>
    {% else %}
        <div class="alert alert-info">
            Your cart is empty. <a href="{{ path('app_products_public') }}">Continue shopping</a>
        </div>
    {% endif %}
</div>
{% endblock %}