{% extends 'base.html.twig' %}

{% block title %}Validate Cart{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Order Summary</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Items in your cart</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in cart.items %}
                                    <tr>
                                        <td>{{ item.product.name }}</td>
                                        <td>{{ item.quantity }}</td>
                                        <td class="text-end">{{ item.product.price }} TND</td>
                                        <td class="text-end">{{ (item.product.price * item.quantity)|number_format(2) }} TND</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td class="text-end"><strong>{{ total|number_format(2) }} TND</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Payment Details</h5>
                    <form action="{{ path('app_order_create') }}" method="POST">
                        <div class="mb-3">
                            <label for="paymentMethod" class="form-label">Payment Method</label>
                            <select class="form-select" id="paymentMethod" name="paymentMethod" required>
                                <option value="">Choose...</option>
                                <option value="cash">Cash on Delivery</option>
                                <option value="card">Credit Card</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-lock"></i> Place Order
                        </button>
                    </form>
                </div>
            </div>

            <div class="d-grid gap-2 mt-3">
                <a href="{{ path('app_cart_show') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Cart
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}